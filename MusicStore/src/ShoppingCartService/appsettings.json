{
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Spring": {
    "Application": {
      "Name": "shoppingcart"
    },
    "Cloud": {
      "Config": {
        "ValidateCertificates": false
      }
    }
  },
  "Management": {
    "Endpoints": {
      "CloudFoundry": {
        "ValidateCertificates": false
      }
    }, 
    "tracing":{
      "alwaysSample": true,
      "useShortTraceIds": true,
      "exporter": {
        "zipkin": {
          "endpoint": "http://zipkinserver:9411/api/v2/spans",
          "validateCertificates": false,
          "useShortTraceIds ": true
        }
      }
    }
  },
  "SqlServer": {
    "Credentials": {
      "Database": "ShoppingCart"
    }
  }
}
